<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    x:Class="AppEstudio1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppEstudio1"
    Title="Aplicacion de Estudio"
    FlyoutIcon="menu_icon.png"
    FlyoutWidth="220"
    BackgroundColor="LightGrey">

    <FlyoutItem Title="Pagina Principal">
        <ShellContent 
            Title="Pagina Principal"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" /> 
    </FlyoutItem>

    <FlyoutItem Title="Pomodoro">
        <ShellContent
            Title="Pomodoro"
            ContentTemplate="{DataTemplate local:PomodoroPage}"
            Route="PodomodoroPage"/>

    </FlyoutItem>

    <FlyoutItem Title="FlowTime">
        <ShellContent
            Title="FlowTime"
            ContentTemplate="{DataTemplate local:FlowTimePage}"
            Route="FlowTimePage"/>
        
    </FlyoutItem>

</Shell>
